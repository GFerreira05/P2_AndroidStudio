<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#191919"
    tools:context=".Perfil">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Perfil"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="16dp"
        android:background="@drawable/fundo_card"
        android:backgroundTint="#2E2E2E"
        android:padding="20dp"
        android:elevation="2dp"
        android:clipToPadding="false">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome do Aluno"
            android:textSize="16sp"
            android:textColor="#AAAAAA" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guilherme Ferreira"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Curso"
            android:textSize="16sp"
            android:textColor="#AAAAAA"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SISTEMAS DE INFORMAÇÃO"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registro do Acadêmico"
            android:textSize="16sp"
            android:textColor="#AAAAAA"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="010623049"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ano de Engresso"
            android:textSize="16sp"
            android:textColor="#AAAAAA"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2023"
            android:textSize="18sp"
            android:textColor="#FFFFFF"/>

        <Button
            android:id="@+id/btn_editar_perfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Editar Informações"
            android:textColor="#FFFFFF"
            android:backgroundTint="#3A3A3A"
            android:layout_marginTop="20dp"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Configurações"
        android:textSize="22sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="16dp">

        <Button
            android:id="@+id/btn_config"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Configurações"
            android:textColor="#FFFFFF"
            android:backgroundTint="#2E2E2E"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/btn_VerCarteirinha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ver Carteirinha"
            android:textColor="#FFFFFF"
            android:backgroundTint="#4CAF50"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/btn_sair"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sair da Conta"
            android:textColor="#FFFFFF"
            android:backgroundTint="#A83232"
            android:layout_marginBottom="20dp"/>
    </LinearLayout>

    <include layout="@layout/rodape"/>

</LinearLayout>
