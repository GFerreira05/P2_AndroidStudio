<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#191919"
    tools:context=".Carteirinha">

    <ImageView
        android:id="@+id/minhaImagem"
        android:layout_width="960px"
        android:layout_height="505px"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:scaleType="centerCrop"
        android:contentDescription="Imagem da internet"/>

    <Button
        android:id="@+id/btn_carregar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="20dp"
        android:text="Carregar Carteirinha"/>

    <include layout="@layout/rodape"/>

</LinearLayout>
